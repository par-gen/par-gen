{
  "private": true,
  "name": "@par-gen/root",
  "version": "0.1.0",
  "description": "Fast JavaScript/TypeScript LR(1) parser generator",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/par-gen/par-gen.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/par-gen/par-gen/issues"
  },
  "homepage": "https://github.com/par-gen/par-gen#readme",
  "scripts": {
    "check": "tsc --build .",
    "check-watch": "tsc --build . --watch",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "engines": {
    "node": ">=14",
    "npm": ">=7"
  },
  "workspaces": [
    "packages/*",
    "parsers/*"
  ],
  "devDependencies": {
    "@types/jest": "26.0.19",
    "@types/node": "14.14.19",
    "cross-env": "7.0.3",
    "eslint": "7.17.0",
    "globby": "11.0.1",
    "jest": "26.6.3",
    "prettier": "2.2.1",
    "typescript": "4.1.3"
  },
  "prettier": {},
  "jest": {
    "projects": [
      "<rootDir>/packages/*",
      "<rootDir>/parsers/*"
    ],
    "testPathIgnorePatterns": [
      "/packages/",
      "/parsers/"
    ]
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "lockFileMaintenance": {
      "enabled": true,
      "automerge": true
    },
    "packageRules": [
      {
        "depTypeList": [
          "devDependencies"
        ],
        "updateTypes": [
          "minor",
          "patch"
        ],
        "automerge": true
      },
      {
        "packagePatterns": [
          "^@types/"
        ],
        "automerge": true
      }
    ]
  },
  "wallaby": {
    "env": {
      "type": "node",
      "params": {
        "env": "NODE_OPTIONS=--experimental-vm-modules"
      }
    }
  }
}
