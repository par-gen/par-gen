{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2019",
    "module": "ESNext",
    "lib": ["ESNext"],
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "stripInternal": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node",
    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [],
  "references": [
    {
      "path": "packages/cli"
    },
    {
      "path": "packages/codegen"
    },
    {
      "path": "packages/dfa"
    },
    {
      "path": "packages/grammar"
    },
    {
      "path": "packages/lexer"
    },
    {
      "path": "packages/nfa"
    },
    {
      "path": "packages/parser"
    },
    {
      "path": "parsers/json"
    },
    {
      "path": "parsers/regexp"
    }
  ]
}
